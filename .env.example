# Database Configuration
# Required: Turso database URL
DATABASE_URI=libsql://your-database.turso.io

# Required: Turso authentication token
DATABASE_AUTH_TOKEN=your-turso-auth-token

# Cloudflare R2 Configuration
# Required: Cloudflare R2 bucket name for media storage
CLOUDFLARE_S3_BUCKET=your-bucket-name

# Required: Cloudflare R2 access key
CLOUDFLARE_S3_ACCESS_KEY=your-access-key

# Required: Cloudflare R2 secret key
CLOUDFLARE_SECRET=your-secret-key

# Required: Cloudflare R2 API endpoint
CLOUDFLARE_S3_API_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Required: Public URL for accessing R2 media files
CLOUDFLARE_PUBLIC_URL=https://your-r2-domain.r2.dev

# Public Environment Variables
# Required: Public hostname for serving R2 images (must start with NEXT_PUBLIC_)
NEXT_PUBLIC_S3_HOSTNAME=https://pub-ff0ee23113d64c13b1d4b075f4d0b9b8.r2.dev

# Payload CMS Configuration
# Required: Secret key for Payload CMS (generate a secure random string)
PAYLOAD_SECRET=your-secure-random-secret-key-here

# Application Environment
# Optional: Node environment (development, production, test)
NODE_ENV=development

# Optional: Next.js configuration
# NEXT_PUBLIC_SERVER_URL=http://localhost:3000
