# Database Configuration
# Required: Turso database URL
DATABASE_URI=libsql://your-database.turso.io

# Required: Turso authentication token
DATABASE_AUTH_TOKEN=your-turso-auth-token

# Vercel Blob Storage Configuration
# Required: Vercel Blob read/write token (auto-generated by Vercel)
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Payload CMS Configuration
# Required: Secret key for Payload CMS (generate a secure random string)
PAYLOAD_SECRET=your-secure-random-secret-key-here

# Application Environment
# Optional: Node environment (development, production, test)
NODE_ENV=development

# Optional: Next.js configuration
# NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Email Configuration (Resend)
# Required: Resend API key for sending emails
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Required: Email sender address (must be verified in Resend)
# Using subdomain to avoid conflicts with 1&1 DNS management
EMAIL_FROM=noreply@notifications.ks-schoerke.de

# Required: Admin email address for issue notifications
ADMIN_EMAIL=admin@yourdomain.com

# Cloudflare R2 Configuration (for document storage - PDFs and ZIPs)
# Required: Cloudflare R2 bucket name
CLOUDFLARE_S3_BUCKET=schoerke-website

# Required: Cloudflare R2 access key
CLOUDFLARE_S3_ACCESS_KEY=your-r2-access-key

# Required: Cloudflare R2 secret key
CLOUDFLARE_SECRET=your-r2-secret-key

# Required: Cloudflare R2 API endpoint (format: https://<account-id>.r2.cloudflarestorage.com)
CLOUDFLARE_S3_API_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Required: Public hostname for serving R2 documents (must start with NEXT_PUBLIC_)
NEXT_PUBLIC_R2_HOSTNAME=https://pub-xxxxxxxxxxxxxxxx.r2.dev
